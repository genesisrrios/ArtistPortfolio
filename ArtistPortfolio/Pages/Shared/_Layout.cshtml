<!DOCTYPE html>
<html lang="en">
<head>
    <base href="~/" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edibeth Capeles Barrientos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" 
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" 
        crossorigin="anonymous" 
        referrerpolicy="no-referrer"
        asp-fallback-href="~/lib/font-awesome/css/all-min.css"/>
@*    <link rel="stylesheet" href="~/ArtistPortfolio.styles.css" asp-append-version="true" />*@    
@await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/">Edibeth Capeles Barrientos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Marketplace">Marketplace</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/NFT">NFTs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Events">Events</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid d-flex flex-column">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Edibeth Capeles Barrientos <small><a href="https://genesisrrios.com"  target="_blank">Made with ❤️ by Genesis Rivera Rios</a></small>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js" asp-fallback-src="/js/vendor/vue-2.5.16.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <environment include="Development">
        <script src="~/lib/axios/axios.js" asp-append-version="true" asp></script>
    </environment>
    <environment include="Production">
        <script src="~/lib/axios/axios.min.js" asp-append-version="true" asp></script>
    </environment>
    <script src="_framework/blazor.server.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script type="text/javascript">
        //let app = new Vue({
        //    el: '#app',
        //    mixins: mixinArray,
        //    data: {
        //    },
        //    methods: {
        //    }
        //});
    </script>
</body>
</html>